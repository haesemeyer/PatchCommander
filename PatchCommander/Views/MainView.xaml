<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:WpfTestBed.ViewModels"
             xmlns:local="clr-namespace:WpfTestBed.Views"
             xmlns:GUI="clr-namespace:MHApi.GUI"
             xmlns:ni="http://schemas.ni.com/controls/2009/xaml/presentation"
             x:Class="WpfTestBed.Views.MainView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="1000" Height="900">
    <UserControl.Resources>
        <GUI:NegateBoolConverter x:Key="NegateBoolConverter"/>
        <vm:MainViewModel x:Key="mvmDataSource"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{StaticResource mvmDataSource}" x:Name="ViewModel" x:FieldModifier="public"/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="208*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnStartStop" Content="Start/Stop" HorizontalAlignment="Left" Margin="209.061,21.861,0,26.178" Grid.Row="1" Width="75" RenderTransformOrigin="1.759,0.974" d:LayoutOverrides="Height" Click="btnStartStop_Click"/>
        <ni:Graph Margin="0,10,465.733,0" Height="320.098" VerticalAlignment="Top" DataSource="{Binding PlotData_live1}">
            <ni:Graph.Axes>
                <ni:AxisDouble x:Name="xScale" Range="0,100" Orientation="Horizontal" MinorDivisions="{x:Null}" Adjuster="ContinuousChart" InteractionMode="None"/>
                <ni:AxisDouble x:Name="yScale" Range="-0.1,0.1" Orientation="Vertical" MinorDivisions="{x:Null}" Adjuster="None" InteractionMode="None">
                    <ni:AxisDouble.MajorDivisions>
                        <ni:RangeLabeledDivisions/>
                    </ni:AxisDouble.MajorDivisions>
                    <ni:AxisDouble.MajorGridLines>
                        <ni:GridLines/>
                    </ni:AxisDouble.MajorGridLines>
                </ni:AxisDouble>
            </ni:Graph.Axes>
        </ni:Graph>
    </Grid>
</UserControl>
